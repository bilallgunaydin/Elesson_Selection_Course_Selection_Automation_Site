@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Anasayfa</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet" type="text/css">

    <style>
        body {
            background: #f2f2f2;
            font-size: 19px;
        }

        .w3-display-container img {
            width: 100%;
            height: 300px;
        }

        .container {
            background: white;
            width: 1200px;
            padding-right: 0px;
            padding-left: 0px;
        }

        .spacing80px {
            margin-top: 80px;
        }

        .spacin125ver {
            width: 12.5%;
            height: 100%;
        }

        .menü {
            box-shadow: 0 0 10px 5px silver;
            margin-top: 10px;
            border-radius: 4px;
        }


        .resim {
            height: 400px !important;
            width: 100% !important;
        }

        .carousel slide {
            width: 50px;
        }

        .carousel {
            position: relative;
            margin-left: -15px;
            margin-right: -15px;
            padding: 0;
        }

        .sidebar-nav {
            padding: 10px;
        }

        .nav.nav-list a {
            padding: 5px 10px;
        }

        .nav-list > .active > a, .nav-list > .active > a:hover, .nav-list > .active > a:focus {
            background-color: #428BCA;
            color: #FFFFFF;
        }

        .nav-header {
            color: darkgrey;
            font-weight: bold;
        }

        .baslık {
            text-decoration: underline !important;
            font-size: 50px;
        }

        .menü {
            margin-left: -15px;
        }
        .MainText {
            margin-top: 10px;
            border-radius: 4px;
        }

        .glyphicon {
            line-height: 0;
            font-size: 23px;
            margin-bottom: 1px;
        }
        



        .btn-success {
            margin-top: 5px !important;
            font-size: 23px !important;
            background-color: #00BCD4 !important;
            border: none;
        }

        .logo {
            height: 30px;
            width: 30px;
        }

        .btn:hover {
            color: dimgrey;
            
        }

        .navbar-nav > li > a {
            padding-bottom: 4px;
        }

        .logout:hover {
            text-decoration: none;
        }

        .footer {
            height: 100px;
            background-color: inherit;
            margin-top: 4px;
        }
        .footerYazi{
            margin-bottom:20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
            <header class="row">
                <div class="container-fluid">
                    <div class="navbar-header">
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="/Manager/Index"><img class="logo glyphicon" src="/Images/events-icon.png" /> Lesson Selection</a></li>
                            <li><a href="/Manager/Index"><span class="glyphicon glyphicon glyphicon-home"></span> Anasayfa</a></li>
                            <li><a href="/Manager/About"><span class="glyphicon glyphicon glyphicon-book"></span> Hakkımızda</a></li>
                            <li><a href="/Manager/Contact"> <span class="glyphicon glyphicon glyphicon-envelope"></span> İletişim</a></li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="false">
                                    <span class="glyphicon glyphicon glyphicon-user">
                                        @*@{Html.RenderAction("LoginUser", "Manager")};*@
                                        
                                    </span>
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <div class="glyphicon">
                                            <div class="glyphicon glyphicon-off"></div>
                                            <a href="@Url.Action("LogOut", "Manager")" class="logout"><span>Çıkış Yap</span></a>

                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </header>
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="4"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="5"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="6"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="7"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="8"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="9"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="10"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="https://www.ed2go.com/common/images/1/17136/sql-programming.jpg" class="resim" alt="...">
                    </div>
                    <div class="item">
                        <img src="https://udemy-images.udemy.com/course/750x422/88750_c444_7.jpg" class="resim" alt="...">
                    </div>
                    <div class="item">
                        <img src="http://2.bp.blogspot.com/-RuQGcAf_3TI/UZsgIY0_fEI/AAAAAAAADz0/S9SITZdFo1o/s1600/14.jpg" class="resim" alt="...">
                    </div>
                    <div class="item">
                        <img src="http://soltech.net/wp-content/uploads/2015/08/blog-entity-framework1.png" class="resim" alt="...">
                    </div>
                    <div class="item">
                        <img src="http://www.agile-scrum.be/wordpress/wp-content/uploads/2014/07/Agile-Scrum-Belgium.png" class="resim" alt="...">
                    </div>
                    <div class="item">
                        <img src="http://sdtimes.com/wp-content/uploads/2014/10/Why-HTML5-31.jpg" class="resim" alt="...">
                    </div>
                    <div class="item">
                        <img src="http://i1.wp.com/www.howtoplugin.com/wp-content/uploads/2015/07/CSS-HERO-REVIEW.jpg" class="resim" alt="...">
                    </div>
                    <div class="item">
                        <img src="https://udemy-images.udemy.com/course/750x422/672274_cd11_2.jpg" class="resim" alt="...">
                    </div>
                    <div class="item">
                        <img src="https://i.ytimg.com/vi/f67PFtrldGQ/maxresdefault.jpg" class="resim" alt="...">
                    </div>
                    <div class="item">
                        <img src="http://www.thugstart.com/wp-content/uploads/2016/04/trello.jpg" class="resim" alt="...">
                    </div>
                    <div class="item">
                        <img src="https://visualstudiomagazine.com/articles/list/~/media/ECG/visualstudiomagazine/Images/introimages/0313vsm_GoussetInsideTFS.jpg" class="resim" alt="...">
                    </div>
                </div>
                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <nav class="col-md-4 col-lg-4 col-sm-4 col-xs-4">
                <div class="row">
                    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 menü">
                        <div class="sidebar-nav">
                            <ul class="nav nav-list">
                                <li><a href="/Manager/UpdateInformation" class="btn btn-success"><i class="glyphicon glyphicon-pencil"></i> Bilgilerimi Güncelle</a></li>
                                <li><a href="/Manager/AddTeacher" class="btn btn-success"><i class="glyphicon glyphicon-ok-sign"></i> Öğretmen Ekle</a></li>
                                <li><a href="/Manager/UpdateTeacher" class="btn btn-success"><i class="glyphicon glyphicon-pencil"></i> Öğretmenleri Güncelle</a></li>
                                <li><a href="/Manager/AddStudent" class="btn btn-success"><i class="glyphicon glyphicon-ok-sign"></i> Öğrenci Ekle</a></li>
                                <li><a href="/Manager/UpdateStudent" class="btn btn-success"><i class="glyphicon glyphicon-pencil"></i> Öğrencileri Güncelle</a></li>
                                <li><a href="/Manager/AddLesson" class="btn btn-success"><i class="glyphicon glyphicon-ok-sign"></i> Ders Ekle</a></li>
                                <li><a href="/Manager/UpdateLesson" class="btn btn-success"><i class="glyphicon glyphicon-pencil"></i> Dersleri Güncelle</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            <section class="col-md-8 col-lg-8 col-sm-8 col-xs-8 MainText">
                @RenderBody()

            </section>
        </div>
        <footer class=" well text-center col-md-12 col-lg-12 col-xs-12 col-sm-12 footer">
            <span class="footerYazi">&copy; 2016 ELesson Selection Application. All Rights Reserved</span>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
