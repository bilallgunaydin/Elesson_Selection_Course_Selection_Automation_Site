@using Entities
@model List<Student>
@{
    ViewBag.Title = "UpdateStudent";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}
<style>
    .btnDelete {
        width: 230px;
        height: 60px;
        font-size: x-large;
    }

        .btnDelete:hover {
            background: #fff !important;
            color: #444 !important;
            border: 2px solid #444 !important;
            box-shadow: none;
            outline: none;
        }
</style>
<h1 style="text-align:center">Öğrencileri Güncelle</h1>
<div class="row">
    <div id="Message" style="display:none" class="text-center alert alert-success">@TempData["Message"]</div>
    <div id="error-message" style="display:none" class="text-center alert alert-danger">@TempData["ErrorMessage"]</div>
</div>
<table class="table table-bordered">
    <colgroup>
        <col style="width:80%"/>
        <col style="width:20%"/>
    </colgroup>
    <thead>
        <tr>
            <th>Adı Soyadı</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            Student student;
            for (int i = 0; i < Model.Count; i++)
            {
                student = Model[i];
                <tr>
                    <td>@student.FullName</td>
                    <td>
                        <form method="post" action="/Manager/UpdateStudentt">
                            <input type="hidden" value="@student.ID" name="id" />
                            <button class="col-md-4 col-lg-4 col-sm-4 col-xs-4 btn btn-danger btnDelete form-control">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script src="~/Scripts/jquery-3.1.1.js"></script>
<script>
    if ($("#error-message").html() != "") {
        $("#error-message").slideDown();
        setTimeout(function () {
            $("#error-message").slideUp();
        }, 5000)
    }
    if ($("#Message").html() != "") {
        $("#Message").slideDown();
        setTimeout(function () {
            $("#Message").slideUp();
        }, 5000)
    }
</script>

